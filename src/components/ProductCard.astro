---

interface Props {
  title: string;
  excerpt: string;
  featuredImage: string;
  date: string;
  slug: string;
}

const { title, excerpt, featuredImage, date, slug } = Astro.props;
---

<article
  class="bg-white rounded-lg shadow-md overflow-hidden
  transition-transform hover:scale-105"
>
  <img src={featuredImage} alt={title} class="w-full h-48 object-cover" />
  <div class="p-6">
    <h2
      class="text-xl font-bold mb-2 text-product-primary
      hover:text-product-secondary"
    >
      <a href={`/post/${slug}`}>{title}</a>
    </h2>
    <p class="text-gray-600 text-sm mb-4">{date}</p>
    <div class="text-gray-700" set:html={excerpt} />
  </div>
</article>
