---
interface Props {
  title: string;
  excerpt: string;
  featuredImage: string;
  date: string;
  slug: string;
}

const { title, excerpt, featuredImage, slug } = Astro.props;
---

<a href={`/servicios/${slug}`} class="block group">
  <article
    class="bg-white rounded-lg shadow-md overflow-hidden
  transition-all hover:scale-105 hover:bg-hv-blue ease-in-out duration-300"
  >
    <img
      src={featuredImage}
      alt={title}
      class="w-full h-48 object-cover"
      loading="lazy"
    />
    <div class="p-6">
      <h2
        class="text-xl text-neutral-900 font-bold mb-2 text-product-primary
      group-hover:text-white transition-colors"
      >
        {title}
      </h2>
      <div class="text-neutral-700 group-hover:text-white transition-colors" set:html={excerpt} />
    </div>
  </article>
</a>
